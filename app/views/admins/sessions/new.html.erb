<% if flash[:alert].present? %>
<div class="error"><%= flash[:alert] %></div>
<% end %>
<div class="login_content">
    <table class="login">
       <%= form_for(resource, :as => resource_name, :url => url_for(:action => "create")) do |f| %>
            <tbody>
                <tr>
                    <td class="t01"><label for="username">邮箱：</label></td>
                    <td class="t02">
                      <%= f.text_field :email, :tabindex=>"1", :class=>"post_name" %>
                    </td>
                </tr>
                <tr>
                    <td class="t01"><label for="password">密码：</label></td>
                    <td class="t02">
                      <%= f.password_field :password, :tabindex=>"2", :class=>"post_name" %>
                    </td>
                </tr>
                <tr height="20">
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="t01"></td>
                    <td class="t03"><button onmouseout="this.className='button_submit_s';" onmouseover="this.className='button_submit_s button_submit_s_hover';" type="submit" class="button_submit_s"> 登录&gt;&gt;</button></td>
                </tr>
            </tbody>
        <% end -%>
    </table>
</div>
